<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:dist="http://schemas.android.com/apk/distribution" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:background="@color/colorWhite" android:clickable="true" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginLeft="15dp" android:layout_marginRight="15dp">
        <LinearLayout android:orientation="horizontal" android:background="@drawable/custom_mobile" android:layout_width="match_parent" android:layout_height="80dp" android:layout_marginTop="10dp">
            <ImageView android:layout_width="match_parent" android:layout_height="match_parent" android:src="@drawable/bulk_heading_img" android:layout_weight="3" android:scaleX="1.2" android:scaleY="1.2"/>
            <TextView android:textSize="14dp" android:textColor="@color/colorWhite" android:gravity="bottom" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginRight="5dp" android:layout_marginBottom="10dp" android:text="Fill Up the Form and add Your Profile Requirements in Minutes !" android:layout_weight="1" android:lineSpacingExtra="-5dp" android:fontFamily="@font/poppins"/>
        </LinearLayout>
        <ScrollView android:scrollbars="none" android:layout_width="match_parent" android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/poppins"
                    android:text="Name *"
                    android:textColor="#424243"
                    android:textSize="12dp" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/edit_name"
                    android:layout_marginBottom="2dp"
                    android:background="#00000000"
                    android:inputType="textPersonName"
                    android:paddingLeft="2dp"
                    android:textSize="14dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#e2e0e0" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/poppins"
                    android:text="Email *"
                    android:textColor="#424243"
                    android:textSize="12dp" />

                <EditText
                    android:id="@+id/edit_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:background="#00000000"
                    android:inputType="textEmailAddress"
                    android:paddingLeft="2dp"
                    android:textColor="#2668c2"
                    android:textSize="14dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#e2e0e0" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/poppins"
                    android:text="Phone Number *"
                    android:textColor="#424243"
                    android:textSize="12dp" />

                <EditText
                    android:id="@+id/edit_phoneno"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:background="#00000000"
                    android:inputType="number"
                    android:maxLength="10"
                    android:paddingLeft="2dp"
                    android:textSize="14dp" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#e2e0e0" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/poppins"
                    android:text="Pin Number *"
                    android:textColor="#424243"
                    android:textSize="12dp" />

                <EditText
                    android:id="@+id/edit_pinno"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:background="#00000000"
                    android:inputType="number"
                    android:maxLength="10"
                    android:paddingLeft="2dp"
                    android:textSize="14dp" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#e2e0e0" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/poppins"
                    android:text="Age *"
                    android:textColor="#424243"
                    android:textSize="12dp" />

                <EditText
                    android:id="@+id/edit_age"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:background="#00000000"
                    android:inputType="number"
                    android:maxLength="10"
                    android:paddingLeft="2dp"
                    android:textSize="14dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#e2e0e0" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/poppins"
                    android:text="Enter Your Location *"
                    android:textColor="#424243"
                    android:textSize="12dp" />

                <EditText
                    android:id="@+id/edit_location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:background="#00000000"
                    android:inputType="text"
                    android:paddingLeft="2dp"
                    android:textSize="14dp" />



                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#e2e0e0" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="10dp"
                    android:id="@+id/btnAddAddress"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/custom_verify"
                    android:fontFamily="@font/poppins"
                    android:text="add profile now"
                    android:textColor="@color/colorWhite"
                    android:textStyle="bold" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</FrameLayout>
