<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:dist="http://schemas.android.com/apk/distribution" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:id="@+id/rlrateustoolbar" android:padding="5dp" android:layout_width="match_parent" android:layout_height="40dp">
        <ImageView android:id="@+id/rateusback" android:clickable="true" android:layout_width="30dp" android:layout_height="20dp" android:layout_centerVertical="true" android:onClick="rateusback" app:srcCompat="@drawable/backward"/>
        <TextView android:textStyle="bold" android:textColor="@color/colorBlack" android:gravity="center_vertical" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_marginLeft="10dp" android:text="Rate Us" android:layout_toRightOf="@+id/rateusback" android:fontFamily="@font/poppins"/>
    </RelativeLayout>
    <TextView android:textSize="16dp" android:textStyle="bold" android:textColor="@color/colorBlack" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:text="Rate your experienence" android:fontFamily="@font/poppins" android:layout_marginStart="24dp"/>
    <TextView android:textColor="@color/colorBlack" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:text="Hey Simanjit! please rate your doorstep delivery experiences" android:fontFamily="@font/poppins" android:layout_marginStart="24dp" android:layout_marginEnd="50dp"/>
    <TextView android:textSize="11dp" android:textColor="@color/colorBlack" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:text="@string/testString" android:fontFamily="@font/poppins" android:layout_marginStart="24dp" android:layout_marginEnd="50dp"/>
    <RatingBar android:id="@+id/ratingBarCustomer" android:layout_width="wrap_content" android:layout_height="40dp" android:layout_marginTop="5dp" android:numStars="5" android:stepSize="1" android:transformPivotX="0dp" android:transformPivotY="0dp" android:scaleX="0.7" android:scaleY="0.7" android:layout_marginStart="24dp"/>
    <EditText android:id="@+id/UserNote" android:textSize="15dp" android:gravity="top|left|center_vertical|center_horizontal|center" android:background="@drawable/custom_search" android:padding="5dp" android:layout_width="match_parent" android:layout_height="100dp" android:layout_marginTop="5dp" android:layout_marginStart="24dp" android:layout_marginEnd="24dp"/>
    <Button android:textSize="16dp" android:textColorHint="@color/colorWhite" android:id="@+id/btn_submit" android:background="@drawable/custom_ad" android:layout_width="match_parent" android:layout_height="40dp" android:layout_marginTop="15dp" android:hint="Submit" android:layout_marginStart="24dp" android:layout_marginEnd="24dp"/>
</LinearLayout>
